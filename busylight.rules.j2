# busylight
# echo -n 1-1.3 | sudo tee /sys/bus/usb/drivers/usb/unbind; echo

ACTION=="bind|unbind", \
ENV{PRODUCT}=="20a0/41e5/*", \
ENV{DEVTYPE}=="usb_interface", \
TAG+="systemd", \
ENV{SYSTEMD_WANTS}+="busylight_hass@$name.service", \
PROGRAM="/usr/bin/logger -p notice %E{ACTION} busylight_hass name3=$name k=%k n=%n p=%p b=%b driver=$driver N=%N"
